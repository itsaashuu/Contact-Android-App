<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp">

    <com.example.ashutosh.contacts.CircularImageView
        android:id="@+id/imageViewCircular"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/singleCName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewCircular"
        android:layout_toEndOf="@+id/imageViewCircular" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/singleBio"
        android:layout_below="@+id/singleCName"
        android:layout_alignLeft="@+id/singleCName"
        android:layout_alignStart="@+id/singleCName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/singleLastName"
        android:layout_alignTop="@+id/singleCName"
        android:layout_toRightOf="@+id/singleCName"
        android:layout_toEndOf="@+id/singleCName" />


</RelativeLayout>